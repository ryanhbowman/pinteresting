<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-sm btn-primary' %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Delete', pin, class: 'btn btn-sm btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in?%>
  <%= link_to 'New Pin', new_pin_path, class: 'btn btn-lg btn-primary' %>
<% end %>
